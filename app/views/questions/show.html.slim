= render 'shared/flash_message'

.panel.panel-primary
  .panel-heading
    .panel-title
      = @question.title
      span.pull-right = render(partial:'questions/actions_dropdown', locals:{question: @question})
  .panel-body
    .row
      .col-xs-9
        = @question.body
      .col-xs-3.text-right
        = @question.user.email

  table.table
    thead
      tr
        th #
        th Answer
        th Actions
        th.text-right Email
    tbody
      - if @question.answers.any?
        - @question.answers.each_with_index do |answer, i|
          tr
            td width="5%" =i
            td width="60%" = answer.content
            - if current_user == answer.user
              td width="20"  = render(partial:'answers/actions_dropdown', locals:{answer:answer})
              td.text-right width="15%" = answer.user.email
            - else
              td
              td.text-right width="40%" = answer.user.email

= render(partial:'answers/form', locals:{question: @question})

